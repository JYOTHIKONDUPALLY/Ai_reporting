public function predefined(Request $request, $type)
{
    $queries = [
        'daily-sales' => "SELECT invoice_date, SUM(total_amount) AS daily_sales 
                          FROM invoice_details 
                          GROUP BY invoice_date 
                          ORDER BY invoice_date DESC",

        'top-items' => "SELECT item_name, SUM(quantity) AS total_qty, SUM(total_price) AS total_sales 
                        FROM invoice_items_detail 
                        GROUP BY item_name 
                        ORDER BY total_sales DESC",

        'revenue-by-franchise' => "SELECT franchise, SUM(total_amount) AS total_revenue 
                                   FROM invoice_details 
                                   GROUP BY franchise 
                                   ORDER BY total_revenue DESC",

        'payments-by-method' => "SELECT payment_method, COUNT(*) AS transactions, SUM(amount_paid) AS collected 
                                 FROM paymentDetails 
                                 GROUP BY payment_method 
                                 ORDER BY collected DESC",

        'refunds' => "SELECT invoice_id, item_name, refund_amount, refund_tax 
                      FROM invoice_items_detail 
                      WHERE refund_amount > 0 
                      ORDER BY refund_amount DESC"
    ];

    if (!isset($queries[$type])) {
        return redirect()->route('reports.index')->with('error', 'Invalid report type');
    }

    $page = (int) $request->input('page', 1);
    $perPage = (int) $request->input('perPage', 25);
    $offset = ($page - 1) * $perPage;

    try {
        $sql = $queries[$type] . " LIMIT $perPage OFFSET $offset";

        $results = $this->clickhouse->select($sql);

        return view('reports.index', [
            'results' => $results,
            'sql' => $queries[$type],
            'page' => $page,
            'perPage' => $perPage
        ]);
    } catch (\Exception $e) {
        return view('reports.index', [
            'results' => [],
            'sql' => $queries[$type],
            'error' => $e->getMessage(),
            'page' => $page,
            'perPage' => $perPage
        ]);
    }
}



public function export(Request $request)
{
    $sql = $request->input('sql');

    try {
        $results = $this->clickhouse->select($sql);

        // Convert results to CSV
        $filename = "report_" . date('Ymd_His') . ".csv";
        $handle = fopen('php://temp', 'r+');

        if (!empty($results)) {
            // Add headers
            fputcsv($handle, array_keys($results[0]));
            // Add rows
            foreach ($results as $row) {
                fputcsv($handle, $row);
            }
        }

        rewind($handle);
        $csv = stream_get_contents($handle);
        fclose($handle);

        return Response::make($csv, 200, [
            'Content-Type' => 'text/csv',
            'Content-Disposition' => "attachment; filename=$filename",
        ]);
    } catch (\Exception $e) {
        return back()->with('error', 'Export failed: ' . $e->getMessage());
    }
}


public function testAi(AiSqlService $ai, ClickhouseService $db)
{
    $question = "Show me the last 5 invoices with their total amounts";

    try {
        $sql = $ai->generateSql($question);
        $results = $db->select($sql);

        return response()->json([
            'question' => $question,
            'sql' => $sql,
            'results' => $results
        ]);
    } catch (\Exception $e) {
        return response()->json([
            'error' => $e->getMessage()
        ], 500);
    }
}

public function askAi(Request $request, AiSqlService $ai, ClickhouseService $db)
{
    $question = $request->input('question');

    // Debug: Log the request data
    \Log::info('AI Request Data:', [
        'all_input' => $request->all(),
        'question' => $question,
        'question_type' => gettype($question)
    ]);

    // Validate that question is provided and not empty
    if (empty($question)) {
        return view('reports.index', [
            'results' => [],
            'sql' => '',
            'question' => '',
            'error' => 'Please provide a question for the AI to process. Received: ' . json_encode($request->all())
        ]);
    }

    try {
        $sql = $ai->generateSql($question);
        $results = $db->select($sql);

        return view('reports.index', [
            'results' => $results,
            'sql' => $sql,
            'question' => $question
        ]);
    } catch (\Exception $e) {
        return view('reports.index', [
            'results' => [],
            'sql' => '',
            'question' => $question,
            'error' => $e->getMessage()
        ]);
    }
}
public function run(Request $request)
{
    $sql = $request->input('sql');
    $page = (int) $request->input('page', 1);
    $perPage = (int) $request->input('perPage', 25); // Default = 25
    $offset = ($page - 1) * $perPage;

    try {
        // Add pagination if no LIMIT already in query
        $paginatedSql = $sql;
        if (!preg_match('/limit/i', $sql)) {
            $paginatedSql .= " LIMIT $perPage OFFSET $offset";
        }

        $results = $this->clickhouse->select($paginatedSql);

        return view('reports.index', [
            'results' => $results,
            'sql' => $sql,
            'page' => $page,
            'perPage' => $perPage
        ]);
    } catch (\Exception $e) {
        return view('reports.index', [
            'results' => [],
            'sql' => $sql,
            'error' => $e->getMessage(),
            'page' => $page,
            'perPage' => $perPage
        ]);
    }
}







